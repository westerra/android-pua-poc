<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/phone_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingHorizontal="0dp"
            android:layout_marginStart="26dp"
            android:layout_marginVertical="@dimen/small"
            android:text="@string/account_deletion_phone"
            style="@style/Widget.MaterialComponents.Button.DialPhone"
            android:background="?android:selectableItemBackground"/>

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/phone_button"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingHorizontal="26dp"
            android:text="@string/account_deletion_message"
            style="@style/CustomTextAppearanceBody1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>